<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script type="text/javascript">
      updateCustomer=function(){
          var customer = {};
          customer.id=$("#id").val();
          customer.name=$("#name").val();
          customer.email=$("#email").val();
          customer.phone=$("#phone").val();
          customer.address=$("#address").val();
          $.ajax({
          type: "PUT",
          url: "/api/customers",
          data: customer,
          success: function(data){
            if(data == "success"){
              location="/customers"; 
            }
          }
        });
      }
    </script> 
    <h1><%= title %></h1>
    <input id='id' type="text" value="<%= record.id %>" name="" placeholder="name" readonly><br/><br/>
    <input id='name' type="text" value="<%= record.name %>" name="" placeholder="name"><br/><br/>
    <input id='email' type="text" value="<%= record.email %>" name="" placeholder="email"><br/><br/>
    <input id='phone' type="text" value="<%= record.phone %>" name="" placeholder="phone"><br/><br/>
    <input id='address' type="text" value="<%= record.address %>" name="" placeholder="address"><br/><br/>
    <input type="button" name="" onclick="updateCustomer()" value="Update Customer"><br/><br/>
  </body>
</html>
